<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/ll_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/iv_computerIcon"
        app:layout_constraintStart_toEndOf="@+id/iv_computerIcon"
        app:layout_constraintTop_toTopOf="@+id/iv_computerIcon">

        <TextView
            android:id="@+id/tv_computerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bill's Computer"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="60dp"
            tools:layout_editor_absoluteY="238dp" />

        <TextView
            android:id="@+id/tv_computerOS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Windows 98"
            tools:layout_editor_absoluteX="60dp"
            tools:layout_editor_absoluteY="260dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_computerIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_laptop_mac_black_36dp"
        android:tint="@color/grey_middle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/ll_info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ll_info" >

        <TextView
            android:id="@+id/tv_statusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/iv_statusIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
