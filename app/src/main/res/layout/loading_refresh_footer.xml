<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ProgressBar
        android:id="@+id/pb_searching"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageButton
        android:id="@+id/ib_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/pb_searching"
        android:layout_alignEnd="@+id/pb_searching"
        android:layout_alignStart="@+id/pb_searching"
        android:layout_alignTop="@id/pb_searching"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="refresh"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_refresh_black_48dp"
        android:tint="@color/colorAccent"
        android:visibility="invisible" />

</RelativeLayout>
